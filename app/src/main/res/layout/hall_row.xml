<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp"
    app:cardBackgroundColor="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/itemIv"
            android:src="@drawable/city_hall"
            app:riv_corner_radius="25dp"
            app:riv_border_width="1dp"
            app:riv_border_color="@color/colorGray1"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/itemIv"
            android:layout_toRightOf="@+id/itemIv">

            <!--Itemname-->
            <TextView
                android:id="@+id/hallNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nimbus_bold"
                android:textSize="14sp"
                android:text="Hall Name"/>

            <TextView
                android:id="@+id/hallCapacityTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nimbus_regular"
                android:textSize="14sp"
                android:text="Hall Capacity"/>

        </LinearLayout>

        <!--to show option like delete, edit etc-->
        <!--        <ImageButton-->
        <!--            android:id="@+id/moreBtn"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:src="@drawable/ic_more_black"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:background="@null"-->
        <!--            android:layout_alignParentRight="true"/>-->
    </RelativeLayout>

</androidx.cardview.widget.CardView>