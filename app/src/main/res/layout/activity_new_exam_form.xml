<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewExamForm">

    <TextView
        android:id="@+id/txtHeader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="start"
        android:text="Add a new Exam"
        android:fontFamily="@font/nimbus_bold"
        android:textSize="14sp"
        android:layout_marginStart="20dp" />

    <LinearLayout
        android:id="@+id/ExamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/txtHeader"
        app:layout_constraintStart_toStartOf="@+id/txtHeader"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nimbus_regular"
            android:text="Course Name"
            android:textColor="@color/txtColor"
            android:textSize="@dimen/astrapos_text_size" />

        <EditText
            android:id="@+id/examNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/rectangle_grey_border"
            android:hint="course"
            android:textSize="@dimen/astrapos_text_size"
            android:maxLength="11"
            android:padding="15dp"
            android:fontFamily="@font/nimbus_regular"
            android:selectAllOnFocus="true" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ExamId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/ExamName"
        app:layout_constraintStart_toStartOf="@+id/ExamName"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Code"
            android:textColor="@color/txtColor"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/astrapos_text_size"
            android:fontFamily="@font/nimbus_regular" />

        <EditText
            android:id="@+id/examCodeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/rectangle_grey_border"
            android:hint="XXX XXX"
            android:textSize="@dimen/astrapos_text_size"
            android:maxLength="11"
            android:padding="15dp"
            android:fontFamily="@font/nimbus_regular"
            android:selectAllOnFocus="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ExamDept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/ExamId"
        app:layout_constraintStart_toStartOf="@+id/ExamId"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textColor="@color/txtColor"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/astrapos_text_size"

            android:fontFamily="@font/nimbus_regular" />

        <EditText
            android:id="@+id/examDeptEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/rectangle_grey_border"
            android:hint="department"
            android:textSize="@dimen/astrapos_text_size"
            android:padding="15dp"
            android:fontFamily="@font/nimbus_regular"
            android:selectAllOnFocus="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ExamCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/ExamDept"
        app:layout_constraintStart_toStartOf="@+id/ExamDept"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textColor="@color/txtColor"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/astrapos_text_size"

            android:fontFamily="@font/nimbus_regular" />

        <EditText
            android:id="@+id/examLevelEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/rectangle_grey_border"
            android:hint="Level"
            android:focusable="false"
            android:textSize="@dimen/astrapos_text_size"
            android:padding="15dp"
            android:fontFamily="@font/nimbus_regular"
            android:selectAllOnFocus="true" />

    </LinearLayout>





    <Button
        android:id="@+id/Submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="start"
        android:background="@drawable/button_states"
        android:enabled="true"
        android:fontFamily="@font/nimbus_regular"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:autoSizeMinTextSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/ExamCourse"
        app:layout_constraintStart_toStartOf="@+id/ExamCourse"
        android:text="Submit"/>
</androidx.constraintlayout.widget.ConstraintLayout>